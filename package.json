{
  "name": "prototypical-games",
  "version": "0.0.1",
  "scripts": {
    "test": "karma start config/karma.conf.js",
    "test:pub": "npm run build && npm test",
    "test:dev": "karma start config/karma.dev.conf.js",
    "test:watch": "karma start config/karma.dev.conf.js --reporters dots --auto-watch --no-single-run",
    "start": "budo --pushstate --open --cors --live --watch-glob=app/*.{js,html,scss} -d pub src/index.js:app.js",
    "lint": "jscs -x --config=config/jscsrc.json src && sass-lint -c config/scss-lint.yml app/**/*.scss",
    "doc": "jsdoc -c config/jsdoc-conf.json",
    "build": "browserify src/index.js | uglifyjs > pub/app.js"
  },
  "dependencies": {
    "angular": "^1.5.7",
    "angular-animate": "^1.5.7",
    "angular-aria": "^1.5.7",
    "angular-filter": "^0.5.9",
    "angular-material": "^1.0.9",
    "angular-messages": "^1.5.7",
    "angular-sanitize": "^1.5.7",
    "angular-ui-router": "^0.3.1",
    "lodash": "^4.13.1",
    "material-colors": "^1.2.0"
  },
  "browserify": {
    "debug": true,
    "require": [
      "sassify",
      "stringify"
    ],
    "transform": [
      [
        "sassify",
        {
          "auto-inject": true
        }
      ],
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      [
        "stringify",
        {
          "appliesTo": {
            "includeExtensions": [
              ".html",
              ".svg",
              ".md",
              ".txt"
            ]
          },
          "minify": true
        }
      ],
      "browserify-ngannotate"
    ]
  },
  "devDependencies": {
    "angular-jsdoc": "^1.4.2",
    "angular-mocks": "^1.5.8",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "browserify-ngannotate": "^2.0.0",
    "budo": "^8.3.0",
    "jasmine-core": "^2.4.1",
    "jscs": "^3.0.7",
    "jsdoc": "^3.4.0",
    "karma": "^1.1.1",
    "karma-angular": "0.0.6",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-browserify": "^5.1.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-source-map-support": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-trx-reporter": "0.2.6",
    "phantomjs-prebuilt": "^2.1.7",
    "sass-lint": "^1.8.2",
    "sassify": "^1.0.0",
    "stringify": "^5.1.0",
    "uglify-js": "^2.7.0",
    "watchify": "^3.7.0"
  }
}
